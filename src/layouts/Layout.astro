---
import NavBar from "../components/NavBar.astro";
import Header from "../components/Header.astro";
import "../styling/variables.css";
export interface Props {
	title?: string;
	subtitle?: string;
}

const defaultTitle = "APS";
const { title = defaultTitle, subtitle } = Astro.props;
const formattedTitle = `${title}${subtitle ? ` | ${subtitle}` : ""}`;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Website for the Alberta Paleontological Society"
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/logos/aps-logo.gif" />
		<meta name="generator" content={Astro.generator} />
		<title>{formattedTitle}</title>
	</head>
	<body>
		<Header />
		<div id="main">
			<main>
				<slot />
			</main>
		</div>
	</body>
</html>
<style is:global>
